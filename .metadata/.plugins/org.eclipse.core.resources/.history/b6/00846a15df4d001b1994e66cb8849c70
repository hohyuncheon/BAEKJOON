package step2;

import java.util.Scanner;

public class Test5 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		System.out.println("시간(0~24시) : ");
		int num1 = sc.nextInt();
		
		System.out.println("분(0~60분) : ");
		int num2 = sc.nextInt();
		
		if(num1==24) {
			num1=00;
		}
		
		System.out.println(num1+":"+num2);
		
		
		
		System.out.println();
		
		
		
	}

}
