package step3;

import java.util.Scanner;

public class Test9 {

	public static void main(String[] args) {
		
		
		Scanner sc = new Scanner(System.in);
		System.out.println("별숫자");
		int num1 = sc.nextInt();
		
		for (int i = 0; i <= num1; i++) {
			for (int j = 1; j <= i; j++) {
				System.out.print("*");
			}System.out.println();
		}

	}

}
