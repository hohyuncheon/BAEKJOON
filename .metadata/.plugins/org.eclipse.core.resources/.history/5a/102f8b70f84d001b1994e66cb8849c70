package step3;

import java.util.Scanner;

public class Test10 {

	public static void main(String[] args) {

		i = 1 
		for (int i = 1; i <= 8; i++) {
			for (int j = 8; j > i; j--) {
				System.out.print("z");
			}
			for (int j = 1; j <= i; j++) {
				System.out.print("o");
			}System.out.println();
		}


	}
}
